@model DIP.Models.SysUser

@{
    ViewData["Title"] = "刪除使用者";
}

<h2>@ViewData["Title"]</h2>

<h4>你確定要刪除此使用者嗎？</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">帳號</dt>
        <dd class="col-sm-10">@Model.UserLogid</dd>

        <dt class="col-sm-2">名稱</dt>
        <dd class="col-sm-10">@Model.UserName</dd>

        <dt class="col-sm-2">信箱</dt>
        <dd class="col-sm-10">@Model.UserMail</dd>

        <dt class="col-sm-2">啟用狀態</dt>
        <dd class="col-sm-10">@(Model.Activeflag == "Y" ? "啟用" : "停用")</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="UserId" />
        <button type="submit" class="btn btn-danger">刪除</button>
        <a asp-action="Index" class="btn btn-secondary">取消</a>
    </form>
</div>
