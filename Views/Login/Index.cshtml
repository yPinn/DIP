@model DIP.Models.LoginModel

@{
    ViewData["Title"] = "登入";
}

<div class="container mt-5" style="max-width: 480px;">
    <h1 class="text-center mb-4 title-nowrap">
        Dracorex Information Product
    </h1>

    <style>
        .title-nowrap {
            font-size: 2rem; /* 控制標題大小 */
            white-space: nowrap; /* 不換行 */
        }
    </style>

    <!-- 圖片縮圖置頂 -->
    <div class="text-center mb-4">
        <img src="https://media.sketchfab.com/models/091fffbf2972484f9c35c8a2ec8916f3/thumbnails/4f5413c3e6bf4ceb9a6d8efb9442a3cb/695b88d803894cbe9aa6d7cfcbe1c4bd.jpeg"
             alt="tralalero tralala"
             class="img-thumbnail"
             style="cursor:pointer; max-width: 100%; height: auto;"
             data-bs-toggle="modal"
             data-bs-target="#imageModal" />
    </div>

    <!-- 登入表單 -->
    <form asp-action="Index" method="post" novalidate>
        <div class="form-group mb-3">
            <label asp-for="Username" class="form-label">User Account</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Password" class="form-label">User Password</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary px-4">登入</button>
            <button type="button" class="btn btn-secondary px-4" onclick="window.location.href='@Url.Action("Index")'">清除</button>
        </div>
    </form>
</div>

<!-- Modal (全螢幕) -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content bg-dark border-0">
            <div class="modal-body p-0 d-flex justify-content-center align-items-center position-relative">
                <img src="https://media.sketchfab.com/models/091fffbf2972484f9c35c8a2ec8916f3/thumbnails/4f5413c3e6bf4ceb9a6d8efb9442a3cb/695b88d803894cbe9aa6d7cfcbe1c4bd.jpeg"
                     alt="放大圖"
                     class="img-fluid w-100 h-auto"
                     style="object-fit: contain;" />
                <button type="button" class="btn-close position-absolute top-0 end-0 m-3" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
