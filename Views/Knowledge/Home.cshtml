@model KnowledgeViewModel

@{
    ViewData["Title"] = "Home";
}

<h2>@ViewData["Title"]</h2>

<!-- 搜索區塊 -->
<form asp-controller="Knowledge" asp-action="Search" method="get" class="search-bar">
    <input type="text" name="keyword" id="searchInput" placeholder="請輸入關鍵字..." />
    <button type="submit">搜尋</button>
    <button type="button" onclick="location.href='@Url.Action("AdvancedSearch", "Knowledge")'">進階搜尋</button>
    <button type="button" onclick="location.href='@Url.Action("More", "Knowledge")'">更多</button>
</form>


<div class="index-container">
    <section class="index-panel">
        <h2>最新更新</h2>
        <ul>
            @foreach (var item in Model.RecentKnowledges)
            {
                <li>
                    <div class="title">
                        <a asp-controller="Knowledge" asp-action="Details" asp-route-id="@item.KfFileId" style="color:inherit; text-decoration:none;">
                            @item.KfFileName
                        </a>
                    </div>
                    <div class="meta">更新時間：@item.TxDate.ToString("yyyy-MM-dd HH:mm")</div>
                </li>
            }
        </ul>
    </section>

    <section class="index-panel">
        <h2>熱門知識</h2>
        <ul>
            @foreach (var item in Model.PopularKnowledges)
            {
                <li>
                    <div class="title">
                        <a asp-controller="Knowledge" asp-action="Details" asp-route-id="@item.KfFileId" style="color:inherit; text-decoration:none;">
                            @item.KfFileName
                        </a>
                    </div>
                    <div class="meta">閱讀次數：@item.KfReadNum.GetValueOrDefault()</div>
                </li>
            }
        </ul>
    </section>
</div>

<style>
    /* 搜索區塊樣式 */
    .search-bar {
        margin-bottom: 20px;
        text-align: center;
    }

        .search-bar input[type="text"] {
            padding: 8px 12px;
            width: 250px;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            vertical-align: middle;
        }

        .search-bar button {
            padding: 8px 16px;
            margin-left: 8px;
            font-size: 1rem;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            background-color: #0d6efd;
            color: white;
            vertical-align: middle;
            transition: background-color 0.3s;
        }

            .search-bar button:hover {
                background-color: #0b5ed7;
            }

    /* 你原本的樣式 */
    .index-container {
        display: flex;
        gap: 24px;
        width: 100%;
    }

        .index-container .index-panel {
            flex: 1;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 14px rgba(0,0,0,0.12);
            padding: 30px;
            display: flex;
            flex-direction: column;
        }

        .index-container h2 {
            margin: 0 0 20px 0;
            text-align: center;
            font-weight: 700;
            font-size: 1.8rem;
            color: #222;
            flex-shrink: 0;
        }

        .index-container ul {
            list-style: none;
            padding: 0;
            margin: 0;
            flex-grow: 1;
        }

        .index-container li {
            margin-bottom: 16px;
            padding-bottom: 10px;
            border-bottom: 1px solid #ddd;
        }

        .index-container .title {
            font-weight: 700;
            color: #005a9e;
            font-size: 1.1rem;
        }

        .index-container .meta {
            font-size: 0.9rem;
            color: #555;
            margin-top: 4px;
        }

        .index-container .title a:hover {
            text-decoration: underline;
        }
</style>
